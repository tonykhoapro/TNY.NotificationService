<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Demo API</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container body-content">
        <label>Username: </label> <input id="txtUsername" value="TNY"/><br />
        <label>Password: </label> <input id="txtPassword" type="password" value="12345"/><br />
        <button id="btnSendNotif">
            Login
        </button>
        <br />


    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script>
        $(document).ready(function () {
            $('#btnSendNotif').click(function () {
                $.ajax({
                    url: '/api/login',
                    type: 'post',
                    data: { UserName: $('#txtUsername').val(), Password: $('#txtPassword').val() },
                    success: function (response) {
                        alert(response.SessionGuid);
                        window.location.href = `/demo/sendnotif?SessionGuid=${response.SessionGuid}`;
                    },
                    error: function (response) {
                        alert(response);
                    }
                });
            });
        });
    </script>
</body>
</html>


